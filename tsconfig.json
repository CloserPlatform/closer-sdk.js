{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": false,
    "noEmitHelpers": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  }
}
